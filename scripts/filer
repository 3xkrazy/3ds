#!/bin/bash
#filer

# Define directories
dir_filer=~/Documents/3ds/filer
dir_jksv=~/Documents/3ds/jksv

# Menu
echo "*** Filer / JKSM Menu ***";
echo "[1] Exit";
echo "[2] Backup filer folder";
echo "[3] Backup jksv folder";
echo -n "Select your choice: ";
read choice;

case $choice in
  1)
  echo "";
  echo "Exiting...";
  exit 0;
  ;;

  2)
  echo "";
  rm -rf $dir_filer; mkdir -vp $dir_filer;
  cp -rRv filer/* $dir_filer/;
  echo "Done!";
  ;;
  
  3)
  echo "";
  rm -rf $dir_jksv; mkdir -vp $dir_jksv;
  cp -rRv jksv/* $dir_jksv/;
  echo "Done!";
  ;;

  *)
  echo "";
  echo "Invalid choice!";
  exit 1;
  ;;

esac
exit 0;
  
